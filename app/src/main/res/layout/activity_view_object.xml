<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ViewObject">

    <ImageButton
        android:id="@+id/VO_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageButton
        android:id="@+id/VO_btn_home"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#096B00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homebtn" />

    <Button
        android:id="@+id/VO_btn_edit"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#096B00"
        android:text="Edit"
        android:textSize="24sp"
        app:cornerRadius="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VO_cl" />

    <TextView
        android:id="@+id/VO_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Object Name-"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/VO_cl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/VO_tv_typeAndProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-Type- - -Project-"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VO_tv_title" />

    <TextView
        android:id="@+id/VO_tv_lastChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Change:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VO_btn_edit" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/VO_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/VO_btn_findSources"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#096B00"
            android:text="Find Sources"
            android:textSize="24sp"
            app:cornerRadius="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/VO_btn_addSource"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#096B00"
            android:text="Add Source"
            android:textSize="24sp"
            app:cornerRadius="24sp"
            app:layout_constraintStart_toEndOf="@+id/VO_btn_findSources"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/VO_btn_findUsages"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#096B00"
            android:text="Find Usages"
            android:textSize="24sp"
            app:cornerRadius="24sp"
            app:layout_constraintTop_toBottomOf="@+id/VO_btn_findSources" />

        <Button
            android:id="@+id/VO_btn_addUsage"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#096B00"
            android:text="Add Usage"
            android:textSize="24sp"
            app:cornerRadius="24sp"
            app:layout_constraintStart_toEndOf="@+id/VO_btn_findUsages"
            app:layout_constraintTop_toBottomOf="@+id/VO_btn_findSources" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>