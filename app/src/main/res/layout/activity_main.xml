<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/MA_tv_title"
        android:layout_width="220dp"
        android:layout_height="125dp"
        android:text="Minecraft Lookup"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/MA_et_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/MA_et_username"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MA_btn_login"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:backgroundTint="#096B00"
        android:text="Login"
        android:textSize="60sp"
        app:cornerRadius="24sp"
        app:layout_constraintBottom_toTopOf="@+id/MA_btn_createAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MA_et_username" />

    <Button
        android:id="@+id/MA_btn_createAccount"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:backgroundTint="#096B00"
        android:text="Create Account"
        android:textSize="24sp"
        app:cornerRadius="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MA_btn_login" />

    <TextView
        android:id="@+id/MA_tv_error_accountNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account not found"
        android:textColor="#D60101"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MA_et_username"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/MA_tv_error_emptyField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter a username"
        android:textColor="#D60101"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MA_et_username"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>