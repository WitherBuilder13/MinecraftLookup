<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ACO_tv_typeProject"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="-type- | -project-"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ACO_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/ACO_tv_name" />

    <TextView
        android:id="@+id/ACO_tv_name"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="-name-"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ACO_v_margin"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ACO_tv_typeProject" />

</androidx.constraintlayout.widget.ConstraintLayout>