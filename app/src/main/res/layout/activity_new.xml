<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.New">

    <ImageButton
        android:id="@+id/N_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageButton
        android:id="@+id/N_btn_home"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#096B00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homebtn" />

    <TextView
        android:id="@+id/N_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/N_btn_sourceUsageType"
            android:layout_width="240dp"
            android:layout_height="130dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#096B00"
            android:text="Source / Usage Type"
            android:textSize="34sp"
            app:cornerRadius="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/N_btn_projectID" />

        <Button
            android:id="@+id/N_btn_projectID"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#096B00"
            android:text="Project ID"
            android:textSize="34sp"
            app:cornerRadius="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/N_btn_objectType" />

        <Button
            android:id="@+id/N_btn_objectType"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#096B00"
            android:text="Object Type"
            android:textSize="34sp"
            app:cornerRadius="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/N_btn_object" />

        <Button
            android:id="@+id/N_btn_object"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:backgroundTint="#096B00"
            android:text="Object"
            android:textSize="34sp"
            app:cornerRadius="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>