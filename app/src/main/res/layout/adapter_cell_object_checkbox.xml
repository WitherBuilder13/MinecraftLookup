<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/ACOC_v_margin"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ACOC_tv_typeProject" />

    <CheckBox
        android:id="@+id/ACOC_cb_main"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ACOC_tv_typeProject"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="-type- | -project-"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ACOC_cb_main"
        app:layout_constraintTop_toBottomOf="@+id/ACOC_cb_main" />

    <TextView
        android:id="@+id/ACOC_tv_name"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="-name-"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ACOC_cb_main"
        app:layout_constraintStart_toEndOf="@+id/ACOC_cb_main"
        app:layout_constraintTop_toTopOf="@+id/ACOC_cb_main" />

</androidx.constraintlayout.widget.ConstraintLayout>