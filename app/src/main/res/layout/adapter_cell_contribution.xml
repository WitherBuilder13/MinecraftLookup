<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/ACC_v_margin"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ACC_tv_contributionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="-c type-"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ACC_v_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ACC_tv_contributionType"
        app:layout_constraintStart_toEndOf="@+id/ACC_tv_contributionType"
        app:layout_constraintTop_toTopOf="@+id/ACC_tv_contributionType">

        <TextView
            android:id="@+id/ACC_tv_name"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="-name-"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ACC_tv_typeProject"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="-type- | -project-"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ACC_tv_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>